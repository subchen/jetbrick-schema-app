<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- Generated by humpic-schema-tools -->
<hibernate-mapping>
    <class name="${table.fullClassName}" table="${table.fn.hbmTableName}">

		${table.fn.hbmPkDefination}

#foreach($c in $table.fn.unpkColumns)
        ${c.fn.hbmColumnDefination}

#end

######## ImportedKeys and ExportedKeys ########
#foreach($k in $table.importedKeys)
        <many-to-one name="${k.importVariableName}" class="${k.referenceTable.fullClassName}" fetch="select" update="false" insert="false" >
#foreach($c in $k.columns)
            <column name="${c.name}" />
#end
        </many-to-one>
#end

#foreach($k in $table.exportedKeys)
        <set name="${k.exportVariableName}" fetch="select" inverse="true">
            <key>
#foreach($c in $k.columns)
                <column name="${c.name}" />
#end
            </key>
            <one-to-many class="${k.table.fullClassName}" />
        </set>
#end

    </class>
</hibernate-mapping>
