<?xml version="1.0" encoding="utf-8" ?>

<table display-name="文件管理">

    <column name="parent_id"
            type="ID"
            nullable="true"
            display-name="ParentID"
            />
    <column name="parent_type"
            type="varchar(50)"
            nullable="true"
            display-name="文件分类"
            />

    <column name="disk_file_name"
            type="varchar(250)"
            display-name="存储文件名"
            />

    <column name="original_file_name"
            type="varchar(250)"
            display-name="原始文件名"
            />

    <column name="ext"
            type="varchar(10)"
            display-name="文件扩展名"
            />

    <column name="size"
            type="int"
            display-name="文件大小"
            />

    <column name="last_user_id"
            type="ID"
            display-name="上传用户"
            >
         <one-to-many reference-table="login_info" import-name="last_user" export-name="auto" />
    </column>
			
    <column name="last_modified" 
            type="datetime"	
            display-name="上传时间"
            />

</table>


